<UserControl
    x:Class="Micacord.UserControls.ServerListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <Grid>
        <muxc:Border CornerRadius="10" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" Padding="5">
            <StackPanel Orientation="Horizontal">
                <muxc:Image x:Name="ServerPictureImage" Width="50" Height="50" />
                <muxc:TextBlock x:Name="ServerNameTextBlock" VerticalAlignment="Center" Margin="10,0,0,0" 
                                Style="{StaticResource BodyTextBlockStyle}"/>
            </StackPanel>
        </muxc:Border>
    </Grid>
</UserControl>
